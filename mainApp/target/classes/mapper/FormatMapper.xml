<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.Dao.FormatMapper">

  <resultMap id="TestMap" type="com.Entity.Student">
    <result column="id" jdbcType="NUMERIC" property="id"/>
    <result column="name" jdbcType="VARCHAR" property="name"/>
    <result column="age" property="age"/>
  </resultMap>
  <insert id="insertIntoData">
    INSERT INTO STUDENT values (#{id},#{name},#{age})
  </insert>
  <delete id="deleteStudent">
    delete from STUDENT
  </delete>

  <select id="selectAllStudent" resultMap="TestMap">
    select * from STUDENT
  </select>

  <select id="format" resultType="HashMap">
    select * from test where id = #{id,jdbcType=VARCHAR}
  </select>

  <update id="update">
    update test set age = age-1 and age &gt; 0
  </update>
  <update id="forUpdate">
    select * from test where id = 1 for update
  </update>

  <select id="getRecords" resultMap="TestMap">
    select * from test where id = #{id,jdbcType=VARCHAR}
  </select>
</mapper>

